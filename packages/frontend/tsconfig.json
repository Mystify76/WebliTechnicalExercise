{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "paths": {},
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "references": [
    {
      "path": "../shared-components"
    }
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
